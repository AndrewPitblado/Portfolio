<style is:global>
  .shiny-sec {
    background: linear-gradient(135deg, #76a8ff 25%, #eee5ff 50%, #5479fc 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }
  .github-calendar-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 2rem 0;
    overflow-x: auto;
    display: flex;
    justify-content: center;
  }

  .react-github-calendar {
    width: 100%;
    max-width: 100%;
  }

  .react-github-calendar .calendar {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Make calendar responsive */
  @media (max-width: 768px) {
    .react-github-calendar .calendar {
      font-size: 10px;
    }
  }
  .flip-content {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: stretch;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.8);
    box-shadow: #5479fc 0px 0px 10px 0px;
    transform: translateY(100%);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }
  .flip-content > div {
    max-height: 100%;
    overflow-y: auto;
    scrollbar-width: thin;
  }
  .flip-content > div::-webkit-scrollbar {
    width: 5px;
  }
  .flip-content > div::-webkit-scrollbar-thumb {
    background-color: var(--sec);
    border-radius: 5px;
  }

  .relative:hover .flip-content {
    transform: translateY(5%);
  }

  .blue-glow {
    background-color: rgba(0, 0, 0, 0.7);
    box-shadow:
      0 0 15px 5px rgba(84, 121, 252, 0.5),
      inset 0 0 20px rgba(84, 121, 252, 0.3);
  }
</style>
