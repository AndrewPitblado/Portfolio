---
const technologies = [
  "astro",
  "angular",
  "react",
  "swift",
  "HTML5",
  "CSS3",
  "javaScript",
  "typeScript",
  "tailwindcss",
  "nodejs",
  "git",
  "sql-server",
  "bash",
];
---

<div class="my-8 py-6">
  <h3
    class="mb-6 text-center text-xl font-semibold text-[var(--white-icon)] opacity-80"
  >
    Technologies I Use
  </h3>
  <div class="flex flex-wrap justify-center gap-4">
    {
      technologies.map((tech) => (
        <div class="flex items-center gap-3 rounded-full border border-[#4C566A40] bg-[#4C566A20] px-4 py-2 transition-all duration-300 hover:-translate-y-1 hover:border-[#88C0D040] hover:bg-[#5E81AC20] hover:shadow-md hover:shadow-[#88C0D020]">
          <img
            src={`/svg/${tech}.svg`}
            alt={tech}
            class="h-5 w-5 transition-transform duration-300 group-hover:scale-110"
            width="20"
            height="20"
            loading="lazy"
          />
          <span class="text-sm font-medium text-[var(--white-icon)] transition-colors duration-300 hover:text-[var(--white)]">
            {tech.charAt(0).toUpperCase() + tech.slice(1)}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style>
  /* Remove the scroll animation since we're using a static layout */
  /* Optional: Add a subtle hover animation */
  div[class*="rounded-full"] {
    position: relative;
    overflow: hidden;
  }

  div[class*="rounded-full"]::after {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(136, 192, 208, 0.1),
      transparent
    );
    transition: 0.5s;
    pointer-events: none;
  }

  div[class*="rounded-full"]:hover::after {
    left: 100%;
  }
</style>
