---
const technologies = [
  "astro",
  "angular",
  "react",
  "swift",
  "HTML5",
  "CSS3",
  "javaScript",
  "typeScript",
  "tailwindcss",
  "nodejs",
  "git",
  "sql-server",
  "bash",
];
---

<div class="relative overflow-x-hidden py-8">
  <div
    class="pointer-events-none absolute inset-y-0 left-0 z-20 w-32 bg-gradient-to-r from-[var(--background)] to-transparent"
  >
  </div>
  <div
    class="pointer-events-none absolute inset-y-0 right-0 z-20 w-32 bg-gradient-to-l from-[var(--background)] to-transparent"
  >
  </div>

  <div class="animate-scroll hover:animate-paused flex w-max gap-12 md:gap-20">
    {
      [...technologies, ...technologies, ...technologies].map((tech) => (
        <div class="group flex items-center gap-2 transition-all duration-300">
          <img
            src={`/svg/${tech}.svg`}
            alt={tech}
            class="h-7 w-auto object-contain opacity-60 transition-transform group-hover:scale-110"
            width="30"
            height="30"
            loading="lazy"
          />
          <span class="text-lg font-medium text-[var(--white-icon)]">
            {tech.charAt(0).toUpperCase() + tech.slice(1)}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  .animate-scroll {
    animation: scroll 60s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 50s;
    }
  }
</style>
